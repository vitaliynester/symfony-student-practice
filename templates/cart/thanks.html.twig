{% extends 'base.html.twig' %}

{% block title %}Спасибо за заказ{% endblock %}

{% block body %}
    {{ dump(order) }}
    <div class="container mx-auto">
        <div class="flex justify-center m-6">
            <h1 class="font-sans text-4xl">Спасибо за заказ!</h1>
        </div>
        <div class="grid grid-cols-3 gap-2 mt-14">
            <div class="col-span-2 divide-y divide-current">
                {% for item in order.items %}
                    <div class="grid grid-rows-4 grid-flow-col gap-4 ">
                        <div class="row-span-4">
                            <img class="flex-grow-0 w-48 h-48" src="/upload/pictures/{{ item.offer.picture }}" alt="Фото товара" />
                        </div>
                        <p class="my-1 font-sans text-xl">{{ item.offer.name }}</p>
                        <p class="my-1 font-sans text-xl">{{ item.offer.price }}</p>
                        <div class="flex flex-row items-stretch">
                            <p class="px-2 mx-0 border border-black font-sans text-xl">{{ item.quantity }}</p>
                        </div>
                    </div>
                {% else %}
                    <h3 class="flex justify-center font-sans text-4xl">Заказ пуст</h3>
                {% endfor %}
            </div>
            <div class="border-solid border-2 border-black rounded-xl self-start">
                <div class="flex justify-center">
                    <h5 class="m-3 font-sans text-4xl">Информация о заказе</h5>
                </div>
                <div class="flex justify-between">
                    <p class="mx-4 font-sans text-2xl">Номер заказа</p>
                    <p class="mx-4 font-sans text-2xl">{{ order.id }}</p>
                </div>
                <div class="flex justify-between">
                    <p class="mx-4 font-sans text-2xl">Стоимость заказа</p>
                    <p class="mx-4 font-sans text-2xl">{{ order.totalSumm }}</p>
                </div>
            </div>

        </div>
    </div>
{% endblock %}