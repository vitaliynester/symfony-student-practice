{% extends 'base.html.twig' %}

{% block title %}История заказов{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <a href="{{ path('personal_account') }}">Назад</a>
    {% for order in orders %}
    <p>-------------------------</p>
    <p>Номер заказа: {{ order.number }}</p>
    <p>Дата оформления: {{ order.createdAt | date("m/d/Y") }}</p>
    <p>Статус: {{ order.status }}</p>
    <p>Стоимость: {{ order.purchaseSumm }}</p>
    <p>Список товаров:</p>
    {% for item in order.items %}
    <p>Название товара: {{ item.offer.name }}</p>
    {% endfor %}
    <p>-------------------------</p>
    {% endfor %}
</div>
{% endblock %}
